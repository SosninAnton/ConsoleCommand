{
    "name": "sosninanton/consolecommand",
    "type": "library",
    "description": "library for handling input arguments and parameters for custom user commands",
    "keywords": [
        "sosninanton",
        "consolecommand"
    ],
    "homepage": "https://github.com/sosninanton/consolecommand",
    "license": "MIT",
    "authors": [
        {
            "name": "SosninAnton",
            "email": "i@sosnin-web.ru",
            "homepage": "https://github.com/SosninAnton",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~8.1",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SosninAnton\\ConsoleCommand\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SosninAnton\\ConsoleCommand\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
